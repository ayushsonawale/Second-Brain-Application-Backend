{
  "compilerOptions": {
    "target": "ES6",                     /* Modern JS output */
    "module": "CommonJS",                /* For Node.js */
    "rootDir": "./src",                  /* Where your .ts files are */
    "outDir": "./dist",                  /* Where compiled JS goes */
    "strict": true,                      /* Enable strict mode */
    "esModuleInterop": true,             /* Fixes import issues */
    "skipLibCheck": true,                /* Skip type checking .d.ts files */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],            /* Compile everything inside src */
  "exclude": ["node_modules"]            /* Skip node_modules */
}
